@{
}

<div class="dialog-create-edit-form wider">

       <dialog id="selectAgreementTypeDialog" class="pt-2 agreement-dialod">
              <div>
                     <span class="closebtn btnCloseDialog" onclick="closeDialogBox()">&times;</span>
              </div>
              <br />
              <div>
                     <h5 class="text-center">Select Agreement Type</h5>
              </div>

              <div class="d-flex justify-content-center mt-4 mb-1">
                     <div class="d-inline col-sm-9">
                            <div class="d-flex col-sm-12 px-1">
                                   <label class="col-sm-4 text-start">Type Id</label>
                                   <select id="agreementType-select"
                                                 class="col-sm-8 rounded-pill border-1 enum-dialog-select">
                                   </select>
                            </div>
                     </div>
                     <div class="d-inline d-flex justify-content-center col-sm-3 mx-1">
                            <button onclick="chooseAgreementType()"
                                    class="btn-primary px-0 py-1 border-0 stylish-btn justify-content-center">
                                   Get Id
                            </button>
                     </div>
              </div>
              <div class="d-flex justify-content-center mt-2 mb-1">
                     <div class="d-inline col-sm-9">
                            <div class="d-flex col-sm-12 px-1">
                                   <label class="col-sm-4 text-start">Edit selected</label>
                                   <input id="checkbox-edit-contractType" type="checkbox" class="mx-2 edit-enum-type" />
                            </div>
                     </div>
                     <div class="d-inline d-flex justify-content-center col-sm-3 mx-1"></div>
              </div>

              <hr />
              <div class="d-flex justify-content-center mt-1 mb-1">
                     <div class="d-inline col-sm-9">
                            <div class="d-flex col-sm-12 px-1">
                                   <label class="col-sm-4 text-start">Create Type</label>
                                   <input id="createAgreementType-input"
                                          class="col-sm-8 rounded-pill border-1 px-2 py-0 add-edit-input" value="" />
                                   <span class="text-danger red-span" style='font-size: 12px;'></span>
                            </div>
                     </div>
                     <div class="d-flex justify-content-center d-inline col-sm-3 mx-1">
                            <button id="btnAddEditAgreementType"
                                           onclick="addAgreementType()"
                                           class="btn-primary px-0 py-1 border-0 justify-content-center stylish-btn add-edit-btn">
                                   Add
                            </button>
                     </div>
              </div>
       </dialog>
</div>
