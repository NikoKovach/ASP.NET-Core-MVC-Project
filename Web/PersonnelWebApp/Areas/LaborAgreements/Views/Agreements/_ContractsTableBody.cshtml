@using Payroll.ViewModels.EmpContractViewModels
@model List<LaborAgreementVM>?

@{
       List<LaborAgreementVM>? entitiesForEdit = Model;
}

<tbody id="customTableBody">
       @{
              int rows = entitiesForEdit.Count;

              for ( int i = 0; i <rows; i++ )
              {
                     int rowNumber = i + 1;
                     string? salary = entitiesForEdit[i].Salary.ToString();
