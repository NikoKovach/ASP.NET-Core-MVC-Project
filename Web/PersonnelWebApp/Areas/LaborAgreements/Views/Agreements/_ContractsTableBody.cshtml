                            <td class="px-1 py-1 text-center"><input type="checkbox" class="edit-checkbox" /></td>
                            <td class="px-1 py-1 text-center">@rowNumber</td>
                            <td class="px-1 py-1">
                                   <input asp-for="@entitiesForEdit[ i ].Id"
                                          class="text-sm-center border-0 table-field" readonly
                                          style="width: 75px;" />
                            </td>
                            <td class="px-1 py-1">
                                   <input asp-for="@entitiesForEdit[ i ].FirstLastName"
                                          class="text-sm-center border-0 table-field" readonly
                                          style="width: 120px;" />
                            </td>
                            <td class="px-1 py-1">
                                   <input asp-for="@entitiesForEdit[ i ].IsActive" type="text"
                                          class="text-sm-center border-0 table-field" readonly
                                          style="width: 75px;" />
                            </td>
                            <td class="px-1 py-1">
