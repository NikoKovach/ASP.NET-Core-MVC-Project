@using Payroll.ViewModels.PersonViewModels
@model AddressesOfPersonVM?

@{
       string? sortText = Model.Addresses.SortValue;
       int? personId = Model.PersonId;

       SearchAddressVM filter = Model.Addresses.FilterVM;
}


<div>
       <div class="d-flex justify-content-start px-0 py-1 w-100">

              <div class="row col-sm-3 border border-2 mx-0">
                     <div class="col-sm-7 d-inline-block px-1 pb-0 pt-3">
                            <div>
                                   <div class="d-flex justify-content-center p-1 m-0">
                                          <div class="d-inline mx-1">
                                                 <form asp-action="Index" method="post">
                                                        <input type="submit" class="btn btn-success border-0 px-1 py-0 col-sm-12" value="..." />
                                                        <input type="hidden" value=@personId name="personId" />
                                                 </form>
                                          </div>
                                          <div class="d-inline mx-1">
                                                 <form asp-action="Index" method="post">
                                                        <input asp-for="@Model.Addresses.PageSize" type="text" name="pageSize"
                                                               class="border-1 col-sm-4 px-1 py-0" />
                                                        <label>Table rows</label>
                                                        <input type="hidden" value="@Model.Addresses.PageIndex" name="pageIndex" />
                                                        <input type="hidden" value=@Model.Addresses.SortValue name="sortParam" />
                                                        <input type="hidden" value=@personId name="personId" />
                                                 </form>
                                          </div>
                                   </div>
                            </div>
                     </div>
                     <label class="col-sm-5 control-label text-start px-1 py-1 pt-4"> &#x1F878; Table Settings</label>
              </div>

              <div class="row col-sm-9 border border-2 mx-1">
                     <label class="col-sm-1 control-label text-end px-1 py-1 pt-4">Filter &#x1F87A;</label>
                     <div class="col-sm-11 d-inline-block px-1 py-1">
                            <form asp-action="Index" method="post">
                                   <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                   <div class="d-flex justify-content-start">
                                          <div class="row mx-0 w-100">
                                                 <div class="form-group col-sm-2 p-0">
                                                        <label asp-for="@filter.Country" class="col-sm-11 px-2"></label>
                                                        <input asp-for="@filter.Country" class="col-sm-10 border-1 px-1 py-0 m-1" type="text"
                                                               validate field-name="@nameof(filter.Country)" />
                                                 </div>
                                                 <div class="form-group col-sm-2 p-0">
                                                        <label asp-for="@filter.Region" class="col-sm-11 px-2"></label>
                                                        <input asp-for="@filter.Region" class="col-sm-10 border-1 px-1 py-0 m-1" type="text"
                                                               validate field-name="@nameof(filter.Region)" />
                                                 </div>
                                                 <div class="form-group col-md-2 p-0">
                                                        <label asp-for="@filter.City" class="col-sm-11 px-2"></label>
                                                        <input asp-for="@filter.City" class="col-sm-10 border-1 px-1 py-0 m-1" type="text"
                                                               validate field-name="@nameof(filter.City)" />
                                                 </div>
                                                 <div class="form-group col-md-3 p-0">
                                                        <label asp-for="@filter.Street" class="col-sm-11 px-2"></label>
                                                        <input asp-for="@filter.Street" class="col-sm-10 border-1 px-1 py-0 m-1" type="text"
                                                               validate field-name="@nameof(filter.Street)" />
                                                 </div>
                                                 <div class="form-group col-md-1 p-0">
                                                        <label asp-for="@filter.Number" class="col-sm-11 px-1"></label>
                                                        <input asp-for="@filter.Number" class="col-sm-10 border-1 px-1 py-0 m-1" type="text"
                                                               validate field-name="@nameof(filter.Number)" />
                                                 </div>

                                                 <input type="hidden" value="@Model.PersonId" name="personId" />
                                                 <input type="hidden" value="@Model.Addresses.PageIndex" name="pageIndex" />
                                                 <input type="hidden" value="@Model.Addresses.PageSize" name="pageSize" />
                                                 <input type="hidden" value="@Model.Addresses.SortValue" name="sortParam" />

                                                 <div class="form-group col-md-2 pb-0 pt-4 px-1">
                                                        @* <label class="col-md-12"></label> *@
                                                        <input type="submit" class="btn btn-success h-75 border-1 col-sm-8 p-0  m-1" value="Search" />
                                                 </div>
                                          </div>
                                   </div>
                            </form>
                     </div>
              </div>
       </div>
</div>
