@using Payroll.ViewModels.PersonViewModels
@model AddressesOfPersonVM?

<div>
       <fieldset id="actual-addresses-fieldset" class="border-2">
              <legend class="col-sm-2 fs-5">Actual Addresses:</legend>
              <div class="row">
                     <div class="d-inline-block col-sm-8 px-1">
                            <div class="col-sm-12">
                                   <label asp-for="@Model.PermanentAddress"
                                          class="col-sm-3 text-end px-1"></label>
                                   <input asp-for="@Model.PermanentAddress"
                                          class="col-sm-8 mx-0 my-1 p-1" readonly />
                            </div>
                            <div class="col-sm-12">
                                   <label asp-for="@Model.CurrentAddress"
                                          class="col-sm-3 text-end px-1"></label>
                                   <input asp-for="@Model.CurrentAddress"
                                          class="col-sm-8 mx-0 my-1 p-1" readonly />
                            </div>
                     </div>
                     <div class="d-inline-block col-sm-4 px-1">
                            <div class="btn-toolbar justify-content-left">
                                   <div class="px-0 col-sm-3">
                                          <button id="show-add-address-form" 
                                                        class="px-0 col-sm-11 btn btn-sm btn-primary border-0 final-btn">
                                                 Create New</button>
                                   </div>
                                   <div class="px-0 col-sm-5">
                                          <button id="show-add-address-form"
                                                  class="px-0 col-sm-11 btn btn-sm btn-primary border-0 final-btn">
                                                 Add From The Existing
                                          </button>
                                   </div>
                            </div>
                            <div class="btn-toolbar justify-content-left">
                                   <div class="px-0 col-sm-3">
                                          <button class="px-0 col-sm-11 btn btn-sm btn-primary border-0 final-btn">
                                                 Edit
                                          </button>
                                   </div>
                                   <div class="px-0 col-sm-2">
                                          <form asp-action="Delete" method="post">
                                                 <button id="delete-entity-btn"
                                                         type="submit"
                                                         class="px-0 col-sm-11 btn btn-sm btn-primary border-0 final-btn">
                                                        Remove
                                                 </button>
                                          </form>
                                   </div>
                                   <div class="px-0 col-sm-3">
                                          <form method="post" asp-action="AllPersons" asp-controller="Persons">
                                                 <button id="go-back-btn"
                                                         class="px-0 col-sm-10 btn btn-sm btn-primary border-0 final-btn employees">
                                                        Persons List
                                                 </button>
                                          </form>
                                   </div>
                            </div>
                     </div>
              </div>
              
       </fieldset>
</div>
