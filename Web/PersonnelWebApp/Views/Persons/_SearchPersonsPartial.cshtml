@using Payroll.ViewModels.PersonViewModels
@model PersonFilterVM?

<div>
       <div class="d-flex form-control justify-content-start px-0 py-1">
              <div class="d-inline-block">
                     <form asp-controller="Persons" asp-action="AllPersons"method="post" id="PersonsTable">
                            <div class="col-md-2">
                                   <div class="row mx-0">
                                          <div class="form-group col-md-1 pl-0">
                                                 <label> </label>
                                                 <input type="submit" class="btn btn-success h-50 border-0 px-2 py-0" value="..." />
                                          </div>
                                   </div>
                            </div>
                     </form>
              </div>
              <div class="d-inline-block">
                     <form asp-action="AllPersons" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="d-flex justify-content-start">
                                   <div class="row mx-0">
                                          <div class="form-group col-md-2 p-0">
                                                 <label asp-for="PersonId" class="col-sm-11"></label>
                                                 <input asp-for="PersonId" class="col-sm-11 border-1 p-0" type="text"
                                                        validate field-name="@nameof(Model.PersonId)" />
                                          </div>
                                          <div class="form-group col-md-5 p-0">
                                                 <label asp-for="SearchName" class="col-sm-11"></label>
                                                 <input asp-for="SearchName" class="col-sm-11 border-1 p-0" type="text"
                                                        validate field-name="@nameof(Model.SearchName)" />
                                          </div>
                                          <div class="form-group col-md-2 p-0">
                                                 <label asp-for="CivilID" class="col-sm-11"></label>
                                                 <input asp-for="CivilID" class="col-sm-11 border-1 p-0" type="text"
                                                        validate field-name="@nameof(Model.CivilID)" />
                                          </div>
                                          <div class="form-group col-md-2 p-0">
                                                 <label class="col-md-12"></label>
                                                 <input type="submit" class="btn btn-success h-50 border-0 col-sm-7 p-0 " value="Search" />
                                          </div>
                                   </div>
                            </div>
                     </form>
              </div>
       </div>
</div>

