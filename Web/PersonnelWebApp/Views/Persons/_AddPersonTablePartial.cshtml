@using Payroll.Services.Services
@using Payroll.ViewModels.PagingViewModels
@using Payroll.ViewModels.PersonViewModels
@model PagingListSortedFiltered<PersonVM,PersonFilterVM>

@{
       PersonVM? personVM = Model.Entity;
       string? sortText = Model.SortValue;
}

<form asp-action="Create">
       <input type="hidden" value="@Model.PageIndex" name="pageIndex" />
       <input type="hidden" value=@sortText name="sortParam" />
       <input type="hidden" value="@Model.FilterVM.PersonId" name="Id" />
       <input type="hidden" value="@Model.FilterVM.SearchName"
              name="SearchName" />
       <input type="hidden" value="@Model.FilterVM.CivilID" name="EGN" />

       <table class="table  table-hover table-responsive-sm ">
              <tbody>
                     <tr id="last-row-add" hidden>
                            <td class="px-3 py-1"></td>
                            <td class="px-4 py-1"></td>
                            <td class="px-4 py-1"></td>
                            <td class="px-4 py-1"></td>
                            <td class="px-1 py-1">
                                   <input asp-for="@personVM.FirstName" type="text" placeholder="Required"
                                          class="border-1 p-0 col-sm-11" validate field-name="@nameof(personVM.FirstName)" />
                            </td>
                            <td class="px-1 py-1">
                                   <input asp-for="@personVM.MiddleName" type="text" class="border-1 p-0 col-sm-11"
                                          validate field-name="@nameof(personVM.MiddleName)" />
                            </td>
                            <td class="px-1 py-1">
                                   <input asp-for="@personVM.LastName" type="text" placeholder="Required"
                                          class="border-1 p-0 col-sm-11" validate field-name="@nameof(personVM.LastName)" />
                            </td>
                            <td class="px-1 py-1">
                                   <input asp-for="@personVM.GenderType" type="text" 
                                          placeholder="Required" class="border-1 p-0 col-sm-11"
                                          list="gender-list" validate field-name="@nameof(personVM.GenderType)" />
                                          <vc:gender-types></vc:gender-types>
                            </td>
                            <td class="px-1 py-1">
                                   <input asp-for="@personVM.CivilNumber" type="text" placeholder="Required"
                                          class="border-1 p-0 col-sm-11" validate field-name="@nameof(personVM.CivilNumber)" />
                            </td>
                            <td class="px-1 py-1">
                                   <input asp-for="@personVM.PhotoFilePath" type="text" class="border-1 p-0 col-sm-11"
                                          validate field-name="@nameof(personVM.PhotoFilePath)" />
                            </td>
                     </tr>
              </tbody>
       </table>

       <input id="add-record" type="submit" class="btn btn-success h-50 border-0 col-sm-7 " value="Create" hidden />
</form>