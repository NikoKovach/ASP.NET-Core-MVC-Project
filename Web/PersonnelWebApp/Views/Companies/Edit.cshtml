@using Payroll.ViewModels
@model CompanyVM

@{
	ViewData["Title"] = "Edit";
	string oldCompanyName = Model.Name;
}

<div class="about_section layout_padding company">
	<div class="container">
		<h1 class="watchs_taital px-5">Edit Company</h1>
	</div>
	<div class="contact_section_2 edit-company">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-5">
					<form asp-action="EditCompany">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="mail_section_1">
							<div class="form-group my-0">
								<label asp-for="Id" class="control-label"></label>
                                                        <input type="text" asp-for="Id" value="@Model.Id"
                                                               class="form-control mail_text my-0 py-1 h-75 w-75" />
                                                        <span asp-validation-for="Id" class="text-danger"></span>
							</div>
							<div class="form-group my-0">
								<label asp-for="Name" class="control-label"></label>
                                                        <input asp-for="Name" placeholder="Required"
                                                               class="form-control mail_text my-0 py-1 h-75 w-75" />
								<span asp-validation-for="Name"class="text-danger"></span>
							</div>
							<div class="form-group my-0">
								<label asp-for="CompanyHeadquarter"class="control-label"></label>
                                                        <input asp-for="CompanyHeadquarter" placeholder="Required"
                                                               class="form-control mail_text my-0 py-1 h-75 w-75" />
								<span asp-validation-for="CompanyHeadquarter" class="text-danger"></span>
							</div>
							<div class="form-group my-0">
								<label asp-for="AddressOfManagement" class="control-label"></label>
								<input asp-for="AddressOfManagement"
                                                               class="form-control mail_text my-0 py-1 h-75 w-75" />
								<span asp-validation-for="AddressOfManagement"class="text-danger"></span>
							</div>
							<div class="form-group my-0">
								<label asp-for="UniqueIdentifier" class="control-label"></label>
                                                        <input asp-for="UniqueIdentifier" placeholder="Required"
                                                               class="form-control mail_text my-0 py-1 h-75 w-75" />
								<span asp-validation-for="UniqueIdentifier" class="text-danger"></span>
							</div>
							<div class="form-group my-0">
								<label asp-for="VATRegNumber" class="control-label"></label>
								<input asp-for="VATRegNumber"
                                                               class="form-control mail_text my-0 py-1 h-75 w-75" />
								<span asp-validation-for="VATRegNumber" class="text-danger"></span>
							</div>
							<div class="form-group my-0">
								<label asp-for="RepresentedBy" class="control-label"></label>
                                                        <input asp-for="RepresentedBy" placeholder="Required"
                                                               class="form-control mail_text my-0 py-1 h-75 w-75" />
								<span asp-validation-for="RepresentedBy" class="text-danger"></span>
							</div>
							<div class="form-group my-0">
								<label asp-for="RepresentativeIdNumber" class="control-label"></label>
								<input asp-for="RepresentativeIdNumber" 
                                                               class="form-control mail_text my-0 py-1 h-75 w-75" />
								<span asp-validation-for="RepresentativeIdNumber"
									 class="text-danger"></span>
							</div>
							<div class="form-group my-0">
								<label asp-for="CompanyCaseNumber" class="control-label"></label>
								<input asp-for="CompanyCaseNumber"
                                                               class="form-control mail_text my-0 py-1 h-75 w-75" />
								<span asp-validation-for="CompanyCaseNumber" class="text-danger"></span>
							</div>
							<div class="form-group my-0">
								<label asp-for="HasBeenDeleted" class="control-label"></label>
								<input asp-for="HasBeenDeleted" type="text" 
                                                               list="browsers"
                                                               class="form-control mail_text my-0 py-1 h-75 w-75" />
								<datalist id="browsers">
									<option>True</option>
									<option>False</option>
								</datalist>
								<span asp-validation-for="HasBeenDeleted" class="text-danger"></span>
							</div>
							<div class="form-group">
								<input name="oldName" type="hidden" 
									value ="@oldCompanyName" />
							</div>
							<div class="send_bt modify-company my-2 h-75">
								<button asp-controller="Companies" asp-action="EditCompany" 
                                                               type="submit" class="py-2">
                                                               Save
								</button>
							</div>
							<div class="send_bt modify-company my-2 h-75">
								<button asp-controller="Companies" asp-action="AllActual"
                                                               class="py-2">
                                                               Back to List
								</button>
							</div>
						</div>						
					</form>
				</div>
				<div class="col-md-6 padding_left_0">
					<div class="map_section">
						<img src="/images/map-img-2.png">
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

