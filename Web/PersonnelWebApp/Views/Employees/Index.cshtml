@using Payroll.Services.Services.EmployeeServices
@using Payroll.ViewModels.EmployeeViewModels
@model PaginatedCollection<GetEmployeeVM>

@{
	ViewData["Title"] = "Index Ajax";
	Layout = "~/Views/Shared/_LayoutLight.cshtml";
}

<div class="col">
	<div class="row navbar-custom">
		<div class="col-md-3">
			<h3 class="text-justify text-dark">Employees</h3>
		</div>
		<div class="col-md-9">
			<nav class="navbar navbar-custom navbar-expand-sm
			navbar-light justify-content-center">
				<ul class="navbar-nav">
					<li class="nav-item">
						<a asp-controller="Employees" asp-action="Create" class="nav-link btn">Add Employee</a>
					</li>
					<li class="nav-item">
						<a href="" class="nav-link btn">Add Person</a>
					</li>
					<li class="nav-item">
						<a href="#" class="nav-link btn">Vacations</a>
					</li>
					<li class="nav-item">
						<a href="#" class="nav-link btn">Disablement</a>
					</li>
				</ul>
			</nav>
		</div>
	</div>
	<hr />
</div>

<div id="employees" class="main-view">
	<div>
		<div class="form-control mb-2">
			<div class="row">
				@Html.AntiForgeryToken()
				<div class="col-md-5">
					<label>Select Company</label>
					<vc:select-company></vc:select-company>
				</div>
				<div class="col-md-1">
					<button id="search-by-company-btn" @* type="submit" *@
					class="btn btn-success">Search</button>
				</div>			
			</div>	
		</div>
	</div>
	<div>
		<partial name="_PartialEmployee" model="@Model.ItemsCollection[0]"></partial>
		<br />
		@{
			var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
			var nextDisabled = !Model.HasNextPage ? "disabled" : "";
		}

		<div class="carousel col-mb-6">
			
			<button class="previous-page btn btn-outline-primary ">
				Previous
			</button>

			<input class="emp-paging text-center" name="pageNumber"
			 />
			<label id="totalPages">/ </label>

			<button class="next-page btn btn-outline-primary ">
				Next
			</button>
		</div>
	</div>
	
</div>

<!-- Javascript files-->
@section Scripts
{
	<script src="~/js/ajax_jquery_functions.js" asp-append-version="true"></script>
}

