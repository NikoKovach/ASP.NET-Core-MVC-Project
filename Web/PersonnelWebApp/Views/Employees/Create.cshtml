@using Payroll.ViewModels.EmployeeViewModels
@model EmployeeVM

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_LayoutLight.cshtml";

	string? empId = default;
	if ( @Model != null )
	{
		empId = @Model.Id.ToString();
	}

	string? controllerName = this.ViewContext.RouteData.Values[ "controller" ].ToString();
	string? actionName = this.ViewContext.RouteData.Values[ "action" ].ToString();
}

<div class="row">
	<div class="col-md-4">
		<h3 employee-id="@empId" create-edit-heading="">Create/Edit Employee</h3>
		<hr />
	</div>
</div>

<div id="create-update-radio-div" class="create-edit row">
    <div class="col-md-4">
	    <div class="form-control">
			<partial name="_CreateEditRadioButtonsPartial" model="@empId" />
			<input id="controller-name" type="text" class="col-md-12" value="@controllerName" hidden />
			<hr />
			<form  class="create-edit-form"
			      method="post" enctype="multipart/form-data">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Id"></label>
					<input asp-for="Id" type="text" id="emp-id" class="col-md-12" disabled />
					<span asp-validation-for="Id" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="PersonId"></label>
					<input asp-for="PersonId" type="text" list="person-list" class="col-md-12">
					<vc:select-person></vc:select-person>
					<span asp-validation-for="PersonId" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="CompanyId"></label>
					<vc:select-company></vc:select-company>			    
					<span asp-validation-for="CompanyId" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="NumberFromTheList"></label>
					<input asp-for="NumberFromTheList" type="text" class="col-md-12"/>
					<span asp-validation-for="NumberFromTheList" class="text-danger">
					</span>
				</div>
				<div class="form-group">
					<label asp-for="ProfileImage">Employee Photo</label>
					<input asp-for="ProfileImage" type="file" class="col-md-12" />
					<span asp-validation-for="ProfileImage" class="text-danger">
					</span>
				</div>
				<hr />
				<div class="form-group">
					<button asp-controller="Employees" asp-action="CreateEmployee" type="submit"
						 class="btn btn-primary create-update-submit" id="create-edit-emp-btn">
						Create
					</button>
					<a asp-action="Index" class="btn btn-primary">Back to List</a>
				</div>
			</form>
		</div>
    </div>
</div>

<!-- Javascript files-->
@section Scripts
{
	<script src="~/custom/create_edit_radioBtn_functions.js" asp-append-version="true"></script>
}


