@using Payroll.ModelsDto.EmployeeDtos
@model GetEmployeeDto


<div class="row col-md-12">

	<div class="col-md-2">
		<label asp-for="@Model.Id"></label>
		<input class="text-center" value="@Model.Id" />
	</div>
	<div class="col-md-2">
		<label asp-for="@Model.PersonDto.FirstName"></label>
		<input class="text-center" value="@Model.PersonDto.FirstName" />
	</div>
	<div class="col-md-2">
		<label asp-for="@Model.PersonDto.LastName"></label>
		<input class="text-center" value="@Model.PersonDto.LastName" />
	</div>

	<div class="col-md-2">
		<label asp-for="@Model.IsPresent"></label>
		<input class="text-center" value="@Model.IsPresent.ToString()" />
	</div>

</div>
