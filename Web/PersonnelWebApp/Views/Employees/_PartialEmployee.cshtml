@using Payroll.ViewModels.EmployeeViewModels
@model GetEmployeeVM

@{
	var realPath = Model.Person.PhotoFilePath;

	string modelId = ( Model.Id <= 0 ) ? string.Empty : Model.Id.ToString();
	string isPresent = (Model.Id <= 0 ) ? string.Empty : Model.IsPresent.ToString();

	string permanentAddress = Model.Person.PermanentAddress ?? "";

	string currentAddress = Model.Person.CurrentAddress ?? "";

}

<div>
	<div class="employees-general row">
		<div class="profile col col-md-10">
			<div class="form-control">
				<div class="row">
					<div class="col col-md-2">
						<div>
							<img id="empPhoto" src="@Url.Content(realPath)" 
							alt="Employee Photo"
							width="120" height="160" />
						</div>
					</div>
					<div class="col col-md-10">
						<div class="form-control">
							<div class="row">
								<div class="col-md-6">
									<div>
										<label>Name</label>
										<input asp-for="@Model.Person.FullName"
											  class="text-justify col-md-12" 
											  id="fullName"/>
									</div>
									<div class="row">
										<div class="col-md-6">
											<label asp-for="@Model.Person.GenderType"></label>
                                                                             <input id="gender" class="text-center col-md-12"
										              asp-for="@Model.Person.GenderType" />
										</div>
										<div class="col-md-6">
											<label asp-for="@Model.Person.EGN"></label>
											<input asp-for="@Model.Person.EGN"
											       class="text-center col-md-12" id="egn"/>
										</div>
									</div>	
									<div>
										<label asp-for="@Model.Person.PermanentAddress"></label>
                                                                      <input id="permanentAddress" class="text-center col-md-12"
											  asp-for="@permanentAddress"/>
									</div>
									<div>
										<label asp-for="@Model.Person.CurrentAddress"></label>
                                                                      <input id="currentAddress" class="text-center col-md-12"
											  asp-for="@currentAddress" />
									</div>
								</div>
								<div class="col-md-3">
									<div>
										<label asp-for="@Model.ContactInfo.PhoneNumberOne">
										</label>
                                                                      <input id="phone-one" class="text-center col-md-12"
									              asp-for="@Model.ContactInfo.PhoneNumberOne" />
									</div>
									<div>
										<label asp-for="@Model.ContactInfo.PhoneNumberTwo">
										</label>
                                                                      <input id="phone-two" class="text-center col-md-12"
									              asp-for="@Model.ContactInfo.PhoneNumberTwo" />
									</div>
									<div>
										<label asp-for="@Model.ContactInfo.E_MailAddress1">
										</label>
                                                                      <input id="email-one" class="text-center col-md-12"
									              asp-for="@Model.ContactInfo.E_MailAddress1" />
									</div>
									<div>
										<label asp-for="@Model.ContactInfo.WebSite">
										</label>
                                                                      <input id="web-site" class="text-center col-md-12"
										asp-for="@Model.ContactInfo.WebSite" />
									</div>
								</div>
								<div class="col-md-3">
									<div>
										<label 
									asp-for="@Model.IdCardPassport.DocumentName">
										</label>
										<input class="text-center col-md-12"
									asp-for="@Model.IdCardPassport.DocumentName" 
									id="cardPassport"/>
									</div>
									<div>
										<label 
								asp-for="@Model.IdCardPassport.DocumentNumber">
										</label>
										<input class="text-center col-md-12"
								asp-for="@Model.IdCardPassport.DocumentNumber"
								id="cardPassportNumber"/>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<hr />

				<div class="col-md-12">
					<div class="row">
						<partial name="_PartialContractInfo" model="@Model.ContractInfo"></partial>
						@* <vc:contract-info company-id=@Model.CompanyId 
						emp-id=@Model.Id>
						</vc:contract-info> *@

						<vc:work-experience company-id=@Model.CompanyId emp-id=@Model.Id>
						</vc:work-experience>
						<div class="col col-md-2">
							<div class="form-control">
								<div>
									<label asp-for="@Model.NumberFromTheList">
									</label>
									<input class="text-center col-md-12"
										  value="@Model.NumberFromTheList" 
										  id="numberFromTheList" />
								</div>
								<div>
									<label asp-for="@Model.IsPresent"></label>
									<input class="text-center col-md-12"
										  value="@isPresent" id="isPresent"/>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>		

		<div class="profile-buttons col col-md-2">
			<partial name="_ButtonSectionEmployees"></partial>
		</div>
	</div>
</div>
